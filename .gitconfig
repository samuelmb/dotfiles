[user]
	name = Sam Balinghasay
	email = sam@stripe.com
[alias]
  aa = add .
	st = status
  d = diff
  dc = diff --cached
	co = checkout
	ci = commit
  cm = commit -m
	br = branch
	lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)%ar%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	gr = grep -n -C 2 --heading
  pl = git fetch && git rebase
[color]
	ui = auto
[color "grep"]
  filename = white
  match = blue
[color "diff"]
  meta = white
[apply]
	whitespace = fix
[push]
	default = current
[branch "master"]
	mergeoptions = --ff-only

